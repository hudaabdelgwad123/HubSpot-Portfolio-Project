[
  {
    "id": "colors",
    "name": "colors",
    "label": "Color Settings",
    "type": "group",
    "children": [
      {
        "id": "primary_color",
        "name": "primary_color",
        "label": "Primary Brand Color",
        "type": "color",
        "default": {
          "color": "#667eea",
          "opacity": 100
        }
      },
      {
        "id": "secondary_color",
        "name": "secondary_color",
        "label": "Secondary Accent Color",
        "type": "color",
        "default": {
          "color": "#764ba2",
          "opacity": 100
        }
      },
      {
        "id": "text_color",
        "name": "text_color",
        "label": "Text Color",
        "type": "color",
        "default": {
          "color": "#333333",
          "opacity": 100
        }
      },
      {
        "id": "background_color",
        "name": "background_color",
        "label": "Background Color",
        "type": "color",
        "default": {
          "color": "#ffffff",
          "opacity": 100
        }
      },
      {
        "id": "light_background",
        "name": "light_background",
        "label": "Light Background Color",
        "type": "color",
        "default": {
          "color": "#f9fafb",
          "opacity": 100
        }
      }
    ]
  },
  {
    "id": "branding",
    "name": "branding",
    "label": "Branding",
    "type": "group",
    "children": [
      {
        "id": "logo",
        "name": "logo",
        "label": "Site Logo",
        "type": "image",
        "default": {
          "src": "",
          "alt": "Site Logo",
          "width": 200,
          "height": 60
        }
      },
      {
        "id": "favicon",
        "name": "favicon",
        "label": "Favicon",
        "type": "image",
        "default": {
          "src": "",
          "alt": "Favicon",
          "width": 32,
          "height": 32
        }
      }
    ]
  },
  {
    "id": "typography",
    "name": "typography",
    "label": "Typography",
    "type": "group",
    "children": [
      {
        "id": "body_font",
        "name": "body_font",
        "label": "Body Font",
        "type": "font",
        "load_external_fonts": true,
        "default": {
          "size": 16,
          "font": "Inter",
          "font_set": "GOOGLE",
          "size_unit": "px",
          "color": "#333333",
          "styles": {}
        }
      },
      {
        "id": "heading_font",
        "name": "heading_font",
        "label": "Heading Font",
        "type": "font",
        "load_external_fonts": true,
        "default": {
          "size": 32,
          "font": "Inter",
          "font_set": "GOOGLE",
          "size_unit": "px",
          "color": "#333333",
          "styles": {
            "font-weight": "700"
          }
        }
      }
    ]
  },
  {
    "id": "layout",
    "name": "layout",
    "label": "Layout Settings",
    "type": "group",
    "children": [
      {
        "id": "container_width",
        "name": "container_width",
        "label": "Container Max Width",
        "type": "number",
        "display": "slider",
        "min": 960,
        "max": 1920,
        "step": 20,
        "default": 1200,
        "suffix": "px"
      },
      {
        "id": "section_spacing",
        "name": "section_spacing",
        "label": "Section Spacing",
        "type": "number",
        "display": "slider",
        "min": 40,
        "max": 160,
        "step": 10,
        "default": 80,
        "suffix": "px"
      },
      {
        "id": "border_radius",
        "name": "border_radius",
        "label": "Border Radius",
        "type": "number",
        "display": "slider",
        "min": 0,
        "max": 50,
        "step": 2,
        "default": 12,
        "suffix": "px"
      }
    ]
  },
  {
    "id": "navigation",
    "name": "navigation",
    "label": "Navigation",
    "type": "group",
    "children": [
      {
        "id": "sticky_header",
        "name": "sticky_header",
        "label": "Enable Sticky Header",
        "type": "boolean",
        "default": true
      },
      {
        "id": "show_scroll_progress",
        "name": "show_scroll_progress",
        "label": "Show Scroll Progress Bar",
        "type": "boolean",
        "default": true
      },
      {
        "id": "nav_background_color",
        "name": "nav_background_color",
        "label": "Navigation Background",
        "type": "color",
        "default": {
          "color": "#ffffff",
          "opacity": 100
        }
      }
    ]
  },
  {
    "id": "footer",
    "name": "footer",
    "label": "Footer",
    "type": "group",
    "children": [
      {
        "id": "footer_bg_color",
        "name": "footer_bg_color",
        "label": "Footer Background Color",
        "type": "color",
        "default": {
          "color": "#1a1a2e",
          "opacity": 100
        }
      },
      {
        "id": "footer_text_color",
        "name": "footer_text_color",
        "label": "Footer Text Color",
        "type": "color",
        "default": {
          "color": "#ffffff",
          "opacity": 100
        }
      },
      {
        "id": "show_social_links",
        "name": "show_social_links",
        "label": "Show Social Links",
        "type": "boolean",
        "default": true
      }
    ]
  },
  {
    "id": "features",
    "name": "features",
    "label": "Features & Performance",
    "type": "group",
    "children": [
      {
        "id": "enable_animations",
        "name": "enable_animations",
        "label": "Enable Scroll Animations",
        "type": "boolean",
        "default": true
      },
      {
        "id": "enable_lazy_loading",
        "name": "enable_lazy_loading",
        "label": "Enable Image Lazy Loading",
        "type": "boolean",
        "default": true
      },
      {
        "id": "show_back_to_top",
        "name": "show_back_to_top",
        "label": "Show Back to Top Button",
        "type": "boolean",
        "default": true
      }
    ]
  }
]
